{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <section id="registerpage">
<div class="form container">
{{ form_start(registerform) }}
    {{form_row(registerform.username, {
        'label': 'Nom de compte'
    }) }}
    {{form_row(registerform.password, {
        'label': 'Mot de passe'
    }) }}
